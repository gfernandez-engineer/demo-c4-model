@startuml BibliotecaComponent
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

Container(api, "API Backend", "Spring Boot", "API REST para funcionalidades del backend") {
    Component(controller, "Controlador REST", "Controlador Spring MVC", "Recibe solicitudes HTTP")
    Component(service, "Servicio", "Clase de Servicio", "Contiene la lógica de negocio")
    Component(repository, "Repositorio", "Interfaz JPA", "Gestiona operaciones con la base de datos")
}

Rel(controller, service, "Llamada de métodos")
Rel(service, repository, "Consulta a la BD")

@enduml
